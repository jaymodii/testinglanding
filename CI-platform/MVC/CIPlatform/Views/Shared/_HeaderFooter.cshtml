<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />
    <script src="~/js/bootstrap.bundle.js"> </script>
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<body class="landingpagefont">
    <div class="wrapper d-flex flex-column h-100 ">
    <header class="header header1 topheader" style="padding:20px 12vw;">
        <div style="display: flex;">
            <div class="stories">
                <a style="text-decoration:none" href="#">
                    <p style="margin:0px;font-size: 16px;" class="textcolorforlanding">Stories</p>
                </a>

            </div>

            <div class="dropdown textcolorforlanding">
                <button class="btn-dropdown btn dropdown-toggle d-flex " type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">

                    <span class="textcolorforlanding profiletext"
                        style="padding-right: 5px;font-size: 16px;font-family:NotoSans-Light">
                        Policy
                    </span>
                    <img style=" margin-right:0px;" id="arrow" src="~/images/drop-down.png" alt="dropdown-arrow"
                        class="ic-down">
                </button>
                <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button">Condition 1</button></li>
                    <li><button class="dropdown-item" type="button">Condition 2</button></li>
                    <li><button class="dropdown-item" type="button">Condition 3</button></li>
                </ul>
            </div>
        </div>





        <div>
            <div class="dropdown textcolorforlanding">
                <button class="btn-dropdown btn dropdown-toggle d-flex " type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <img style="border-radius: 50%;height: 25px;width: 25px;margin-right:9px;"
                        src="~/images/user-img.png">
                    <span class="textcolorforlanding profiletext"
                        style="padding-right: 5px; font-size: 15px;letter-spacing: 0px;">
                        @ViewBag.username
                    </span>
                    <img style="margin-right:0px;" id="arrow" src="~/images/drop-down.png" alt="dropdown-arrow"
                        class="ic-down">
                </button>
                <ul class="dropdown-menu">
                    <li><button class="dropdown-item" type="button">Action</button></li>
                    <li><button class="dropdown-item" type="button">Another action</button></li>
                    <li><a href="index.html" class="dropdown-item" type="button">Logout</a></li>
                </ul>
            </div>
        </div>
    </header>
    <div class="flex-grow-1">

        @RenderBody()
    </div>
    <div class="footer flex-shrink-0 flex-grow-0">
        <a style="text-decoration:none;
        color: #414141;" href="#"><span>Privacy Policy</span></a>
    </div>

    </div>
    <script src="~/js/landing.js">

</script>
</body>
</html>
