                </div>
                <!-- <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button> -->
              </div>
        </div>
        <div
          class="right-container col-sm-5 col-md-4 d-flex flex-column justify-content-around align-items-center"
        >
          <form class="firstform" method="post">
            <div class="form-outline mb-4">
                <label asp-for="FirstName" class="form-text text mb-1">First Name</label>
                <input asp-for="FirstName"  type="text" id="firstname" style="columns: #414141; letter-spacing:0px;" placeholder="evan"class="form-control  textstyle" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            
            <div class="form-outline mb-4">
                <label class="form-text text mb-1" asp-for="LastName">Last Name</label>
                <input asp-for="LastName" type="text" id="lastname" style="columns: #414141; letter-spacing:0px;" placeholder="donohue"class="form-control  textstyle" />
                <span asp-validation-for="LastName" class="text-danger"></span>
              
            </div>
              <div class="form-outline mb-4">
                <label class="form-text text mb-1" asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" type="number" id="contactnumber" style="columns: #414141; letter-spacing:0px;" placeholder="8923454615"class="form-control  textstyle" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                 
            </div>
             

            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-text emailtext mb-1" asp-for="Email">Email address</label>
              <input asp-for="Email" type="email" id="emailID" style="columns: #414141; letter-spacing:0px;" placeholder="evan.donohue@gmail.com"class="form-control  textstyle" />
                <span asp-validation-for="Email" class="text-danger"></span>
                
          </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <label class="form-text mb-1" asp-for="Password">Password</label>
              <input asp-for="Password" type="password" id="password" class="form-control  textstyle" placeholder="**********" />
                <span asp-validation-for="Password" class="text-danger"></span>
                 
          </div>

            <div class="form-outline mb-4">
                <label class="form-text mb-1" for="password">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" id="cpassword" class="form-control  textstyle" placeholder="**********" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                  
            </div>



            <!-- Register button -->
            <button @*asp-action="Register" asp-controller ="Home"*@ type="submit" class="btn btn-login d-flex mb-4">
              Register
            </button>

            <!-- Register buttons -->
            <div class="text-center">
              <a asp-controller="User" asp-action="ForgotPassword"><p class="mb-4 textstyle">Lost your password?</p></a>
              <p>Already registered?<a class="createlink" asp-controller="User" asp-action="Index">Login now</a></p>
            </div>
          </form>
         <p class="form-text text-center privacy textstyle"><a href="#">Privacy Policy</a></p>
        </div>
      </div>
    
    <!-- Bootstrap JS -->
    <script src="./js/bootstrap.bundle.js"></script>
    <!-- <script src="./js/bootstrap.bundle.min.js"></script> -->
  </body>
</html>


